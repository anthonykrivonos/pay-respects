{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./build",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "rootDir": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*",
    "index.ts"
  ]
}
